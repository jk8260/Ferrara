@using EPiServer.Core
@using EPiServer.Web.Mvc.Html

@model Ferrara.Sites.Keebler.KeeblerFooterBlock.KeeblerFooterBlock

    <div class="footer">
        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-12">
                @Html.PropertyFor(x => x.SocialMediaBlock)
            </div>

            <div class="col-lg-5 col-sm-12">
                <div class="main-links-container">
                    @Html.PropertyFor(x => x.MainLinksArea)
                </div>
            </div>

            <div class="col-lg-4 col-sm-12 email-container">
                <h5>Get the Latest</h5>
                <p class="email-description">Be the first to know about new Keebler products, promotions and giveaways.</p>
                <div id="mc_embed_signup">
                    <form action="https://keebler.us4.list-manage.com/subscribe/post?u=528de2a86cf7b71d2fbc4e8ab&amp;id=5e678b0f9b"  onsubmit="displayResponse('success')" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blan">
                        <div id="mc_embed_signup_scroll">
                            <div id="emailInputContainer" class="mc-field-group text-input-with-icon">
                                <input id="submit-arrow" type="image" src="~/Static/gfx/ArrowIcons/SmallRightArrow.svg" alt="Submit" />

                                <input type="email" name="EMAIL" class="required email custom-text-input" placeholder="your email address" id="mce-EMAIL" required>
                            </div>
                            <label class="container-maroon terms-input">
                                I have read and agree to the privacy policy.*
                                <input type="checkbox" required>
                                <span class="checkmark-light"></span>
                            </label>
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_528de2a86cf7b71d2fbc4e8ab_5e678b0f9b" tabindex="-1" value=""></div>
                        </div>
                    </form>
                </div>
            </div>
                
            <div class="col-12">
                <div class="footer-msg">
                    © @DateTime.Now.Year.ToString() The Ferrero Group. All Rights Reserved
                </div>
                <hr />
                <div class="base-container">
                    <div class="ferrara-brand">
                        <a href="@Html.PropertyFor(x => x.FerraraLink)" target="_blank">
                            @Html.PropertyFor(x => x.FerraraBrandImage)
                        </a>
                    </div>
                    <div class="other-brands">
                        <a href="@Html.PropertyFor(x => x.OtherBrandsLink)" target="_blank">Other Brands</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
