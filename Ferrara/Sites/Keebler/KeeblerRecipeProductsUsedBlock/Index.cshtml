@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@using EPiServer.Core.Html;

@model Ferrara.Sites.Keebler.KeeblerRecipeProductsUsedBlock.KeeblerRecipeProductsUsedBlock

<div class="card keebler-card-w-btn product-used-block">
    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <div class="card-text card-description">
                    <h5 class="card-title">
                        @Html.PropertyFor(x => x.ProductNameLabel)
                    </h5>
                        @Html.PropertyFor(x => x.ProductDescription)

                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <button class="card-button" type="button" data-toggle="modal" data-target="#widget-modal"
                onclick="destiniFunction('destinidiv','@Model.BuyNowLink')">
            BUY NOW
        </button>
    </div>
</div>
<!-- Where to Buy Modal -->
<div class="modal fade destini-modal" id="widget-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="destinidiv" src=""></div>
            </div>
            <div class="modal-footer">
            </div>
        </div>
    </div>
</div>

<script>
    function destiniFunction(containerId, associationId) {
        destini.init(containerId);
        destini.loadWidget(associationId);
    }
</script>